{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 26,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ci-gcc-linux-x86_64-debug",
      "inherits": [
        "core-debug",
        "core",
        "toolchain-linux",
        "compiler-gcc"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "ci-msvc-windows-x86_64-debug",
      "inherits": [
        "core-debug",
        "core",
        "toolchain-windows",
        "compiler-msvc"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "ci-gcc-linux-x86_64-debug",
      "configurePreset": "ci-gcc-linux-x86_64-debug",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "ci-msvc-windows-x86_64-debug",
      "configurePreset": "ci-msvc-windows-x86_64-debug",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "testPresets": [
    {
      "name": "ci-gcc-linux-x86_64-debug",
      "configurePreset": "ci-gcc-linux-x86_64-debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "ci-msvc-windows-x86_64-debug",
      "configurePreset": "ci-msvc-windows-x86_64-debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ]
}

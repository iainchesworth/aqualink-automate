{
  "version": 3,
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "${sourceDir}/cmake/toolchains/windows.msvc.toolchain.cmake"
        }
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-x64-debug-msvc",
      "displayName": "Windows x64 (MSVC, debug)",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_CLANG_TIDY": "OFF"
      }
    },
    {
      "name": "windows-x64-debug-msvc-asan",
      "displayName": "Windows x64 (MSVC, debug, asan)",
      "inherits": "windows-x64-debug-msvc",
      "cacheVariables": {
        "ENABLE_PROFILING": "OFF",
        "ENABLE_SANITIZERS": "ON",
        "SANITIZE_ADDRESS": "ON"
      }
    },
    {
      "name": "windows-x64-release-msvc",
      "displayName": "Windows x64 (MSVC, release)",
      "inherits": "windows-x64-debug-msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "windows-x64-debug-clang",
      "displayName": "Windows x64 (clang, debug)",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "${sourceDir}/cmake/toolchains/windows.clang.toolchain.cmake"
        }
      }
    },
    {
      "name": "windows-x64-debug-clang-asan",
      "displayName": "Windows x64 (clang, debug, asan)",
      "inherits": "windows-x64-debug-clang",
      "cacheVariables": {
        "ENABLE_PROFILING": "OFF",
        "ENABLE_SANITIZERS": "ON",
        "SANITIZE_ADDRESS": "ON"
      }
    },
    {
      "name": "windows-x64-debug-clang-tsan",
      "displayName": "Windows x64 (clang, debug, tsan)",
      "inherits": "windows-x64-debug-clang",
      "cacheVariables": {
        "ENABLE_PROFILING": "OFF",
        "ENABLE_SANITIZERS": "ON",
        "SANITIZE_THREAD": "ON"
      }
    },
    {
      "name": "windows-x64-release-clang",
      "displayName": "Windows x64 (clang, release)",
      "inherits": "windows-x64-debug-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "linux-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "${sourceDir}/cmake/toolchains/linux.gcc.toolchain.cmake"
        }
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "vendor": {
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    },
    {
      "name": "linux-x64-debug-gcc",
      "displayName": "Linux x64 (gcc, debug)",
      "inherits": "linux-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_CLANG_TIDY": "OFF"
      }
    },
    {
      "name": "linux-x64-release-gcc",
      "displayName": "Linux x64 (gcc, release)",
      "inherits": "linux-x64-debug-gcc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "linux-x64-debug-clang",
      "displayName": "Linux x64 (clang, debug)",
      "inherits": "linux-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "${sourceDir}/cmake/toolchains/linux.clang.toolchain.cmake"
        }
      }
    },
    {
      "name": "linux-x64-release-clang",
      "displayName": "Linux x64 (clang, release)",
      "inherits": "linux-x64-debug-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "macos-debug",
      "displayName": "macOS Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "vendor": {
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    }
  ]
}

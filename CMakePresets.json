{
  "version": 3,
  "configurePresets": [
    {
      "name": "core",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/install/${presetName}",
      "toolchainFile": "${sourceDir}/deps/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_WITH_INSTALL_RPATH": "ON",
        "ENABLE_CLANG_TIDY": "OFF",
        "ENABLE_PROFILING": "OFF",
        "ENABLE_SANITIZERS": "OFF",
        "SANITIZE_ADDRESS": "OFF",
        "SANITIZE_MEMORY": "OFF",
        "SANITIZE_THREAD": "OFF",
        "SANITIZE_UNDEFINED": "OFF"
      }
    },
    {
      "name": "windows-base",
      "inherits": "core",
      "hidden": true,
      "cacheVariables": {
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "${sourceDir}/cmake/toolchains/windows.toolchain.cmake"
        },
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-x64-debug-msvc",
      "displayName": "Windows x64 (MSVC, debug)",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-x64-debug-msvc-asan",
      "displayName": "Windows x64 (MSVC, debug, asan)",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_SANITIZERS": "ON",
        "SANITIZE_ADDRESS": "ON"
      }
    },
    {
      "name": "windows-x64-release-msvc",
      "displayName": "Windows x64 (MSVC, release)",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "windows-x64-debug-clang",
      "displayName": "Windows x64 (clang, debug)",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "clang-cl.exe",
        "CMAKE_CXX_COMPILER": "clang-cl.exe"
      }
    },
    {
      "name": "windows-x64-debug-clang-asan",
      "displayName": "Windows x64 (clang, debug, asan)",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "clang-cl.exe",
        "CMAKE_CXX_COMPILER": "clang-cl.exe",
        "ENABLE_SANITIZERS": "ON",
        "SANITIZE_ADDRESS": "ON"
      }
    },
    {
      "name": "windows-x64-release-clang",
      "displayName": "Windows x64 (clang, release)",
      "inherits": "windows-x64-debug-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_C_COMPILER": "clang-cl.exe",
        "CMAKE_CXX_COMPILER": "clang-cl.exe"
      }
    },
    {
      "name": "linux-base",
      "inherits": "core",
      "hidden": true,
      "cacheVariables": {
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "${sourceDir}/cmake/toolchains/linux.toolchain.cmake"
        },
        "CMAKE_C_COMPILER": "gcc-13",
        "CMAKE_CXX_COMPILER": "g++-13"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-x64-debug-gcc",
      "displayName": "Linux x64 (gcc, debug)",
      "inherits": "linux-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-x64-release-gcc",
      "displayName": "Linux x64 (gcc, release)",
      "inherits": "linux-x64-debug-gcc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "linux-x64-debug-clang",
      "displayName": "Linux x64 (clang, debug)",
      "inherits": "linux-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "/usr/lib/llvm-16/bin/clang",
        "CMAKE_CXX_COMPILER": "/usr/lib/llvm-16/bin/clang++"
      }
    },
    {
      "name": "linux-x64-debug-clang-asan",
      "displayName": "Linux x64 (clang, debug, asan)",
      "inherits": "linux-x64-debug-clang",
      "cacheVariables": {
        "ENABLE_SANITIZERS": "ON",
        "SANITIZE_ADDRESS": "ON"
      }
    },
    {
      "name": "linux-x64-debug-clang-tsan",
      "displayName": "Linux x64 (clang, debug, tsan)",
      "inherits": "linux-x64-debug-clang",
      "cacheVariables": {
        "ENABLE_SANITIZERS": "ON",
        "SANITIZE_THREAD": "ON"
      }
    },
    {
      "name": "linux-x64-release-clang",
      "displayName": "Linux x64 (clang, release)",
      "inherits": "linux-x64-debug-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "macos-base",
      "inherits": "core",
      "hidden": true,
      "cacheVariables": {
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "${sourceDir}/cmake/toolchains/macos.toolchain.cmake"
        }
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "macos-debug",
      "inherits": "macos-base",
      "displayName": "macOS Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "macos-release",
      "displayName": "macOS Release",
      "inherits": "macos-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    }
  ]
}
